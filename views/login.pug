extends layout 

block content 
    if user 
        h1 Welcome Back #{user.username}!
        div.flexjustifycenter
            button.log-out(onClick="location.href='/logout'") Log Out

        if (user.status === false)
            a(href="/profile")
                p.user.status="Not a member? Click to join."

    else
        div.login-form
            h1=title
            form(method="POST" action="/login")
                div.form-group
                    label(for="username") Username: 
                div.input-group
                    input(type="text" name="username" required)
                div.form-group
                    label(for="password") Password: 
                div.input-group
                    input(type="password" name="password" required)
                div.button
                    button.btn-primary(type='submit') Log in

            if failureMessage
                p.failureMessage=failureMessage
